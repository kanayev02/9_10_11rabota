<Page x:Class="_91011rabota.Polzovateli"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_91011rabota"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Polzovateli">

    <Grid>
        <StackPanel>
           
        <DataGrid Name="Stud" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="id пользователя" Binding="{Binding idпользователь}"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding Имя}"/>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding Фамилия}"/>
                <DataGridTextColumn Header="Пол" Binding="{Binding Пол1.Пол1}"/>
                <DataGridTextColumn Header="Логин" Binding="{Binding Логин}"/>
                <DataGridTextColumn Header="Пароль" Binding="{Binding Пароль}"/>
                <DataGridTextColumn Header="Роль" Binding="{Binding Роли.Роль}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Назад" Name="Nazad" Width="100" Click="Nazad_Click"/>
        </StackPanel>
    </Grid>
</Page>
